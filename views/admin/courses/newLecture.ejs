<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="fiter">
                <a href="courseList"><i class="fas fa-angle-double-left"></i> All Course</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Lecture</h2>
        </div>
        <!-- form handling -->
        <form action="/api/newLecture" method="POST" id="add_course">
            <div class="new_course">
                <div class="form-group">
                    <label for="nameLecture" class="text-dark">Name Lecture</label>
                    <input type="text" name="nameLecture" value="">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Content</label>
                    <textarea class="form-control" name="contentLecture" id="exampleFormControlTextarea1"
                        rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="VideoId" class="text-dark">Video Id</label>
                    <input type="text" name="VideoId" value="">
                </div>
                <div class="form-group">
                    <label for="noteLecture" class="text-dark">Note Lecture</label>
                    <input type="text" name="noteLecture" value="">
                </div>
                <input type="hidden" name="id" value="<%= id %>">
                <div class="form-group">
                    <button type="submit" class="btn btn-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $(document).ready(function () {
            $("#add_course").submit(function (event) {
                event.preventDefault(); // Prevent the default form submission behavior

                $.ajax({
                    type: $(this).attr('method'), // Get the form's HTTP method (e.g., "POST")
                    url: $(this).attr('action'), // Get the form's action URL
                    data: $(this).serialize(), // Serialize the form data for submission
                    success: function () {
                        alert("Data Inserted Successfully!");
                    },
                    error: function (error) {
                        console.log('Error:', error);
                    }
                });
            });
        });
    });
</script>
<!-- End Main Site -->