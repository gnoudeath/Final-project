<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="fiter">
                <a href="courseList"><i class="fas fa-angle-double-left"></i> All Course</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">New Course</h2>
        </div>
        <!-- form handling -->
        <form action="/api/courses" method="POST" id="add_course">
            <div class="new_course">
                <div class="form-group">
                    <label for="nameCourse" class="text-dark">Name Course</label>
                    <input type="text" name="nameCourse" value="">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Description</label>
                    <textarea class="form-control" name="descriptionCourse" id="exampleFormControlTextarea1"
                        rows="3"></textarea>
                </div>
                <div class="form-group">
                    <label for="videoIdCourse" class="text-dark">Video Id</label>
                    <input type="text" name="videoIdCourse" value="">
                </div>
                <div class="form-group">
                    <label for="costCourse" class="text-dark">Cost Course</label>
                    <input type="text" name="costCourse" value="">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark update">Save</button>
                </div>
            </div>
        </form>
    </div>
</main>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $("#add_course").submit(function (event) {
            alert("Data Inserted Successfully!")
        })
    });
</script>
<!-- End Main Site -->