<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container-1">
        <div class="row-1">
            <div class="col-7 my-container2">
                <div class="">
                    <div class="text-left mb-4">
                        <h5 style=" color: black; font-size: 30px;">
                            <%= courses.nameCourse %>
                        </h5>
                        <p>
                            <%= courses.descriptionCourse %>
                        </p>
                    </div>
                    <div class="tonghopca">
                        <div class="tong-all">
                            <% let totalChapters=0; %>
                            <% let totalLectures=0; %>
                                <% for (let j=0; j < courseContent.length; j++) { %>
                                    <% totalChapters++; %>
                                        <div class="nav-baihoc" data-target="tonghop-baihoc-<%= j %>">
                                            <div class="baihoc<%= j + 1 %>">
                                                <h6 class="h6-god">
                                                    <span class="icon expand-icon">+</span>
                                                    <span>
                                                        <%= j + 1 %>. <%= courseContent[j].nameCourseContent %>
                                                    </span>
                                                    <span class="span-baihoc">
                                                        <%= lectureList[j].length %> bài học
                                                    </span>
                                                </h6>
                                            </div>
                                        </div>
                                        <% totalLectures +=lectureList[j].length; %>
                                            <div class="tonghop-baihoc" id="tonghop-baihoc-<%= j %>">
                                                <% for (let k=0; k < lectureList[j].length; k++) { %>
                                                    <div class="noidung-baihoc">
                                                        
                                                            <a href="/course-learning/<%= courses.slug %>?id=<%= lectureList[j][k]._id %>" class="dangky-btn">

                                                            <div class="baihoc-div1">
                                                                <span>
                                                                    <%= (totalLectures - lectureList[j].length + k + 1) %>. <%=
                                                                            lectureList[j][k].nameLecture %>
                                                                </span>
                                                                <span class="time-baihoc">
                                                                    <%= lectureList[j][k].duration %>
                                                                </span>
                                                            </div>
                                                        </a>
                                                        
                                                    </div>
                                                    <% } %>
                                            </div>
                                            <% } %>
                        </div>
                        <div class="row-container">
                            <h5 style="color: black; font-size: 20px;">Nội dung khóa học</h5>
                            <div class="noidung-cl">
                                <ul>
                                    <li><strong>
                                            <%= totalChapters %>
                                        </strong> chương</li>
                                    <li><strong>
                                            <%= totalLectures %>
                                        </strong> bài học</li>
                                    <li><span>Thời lượng <strong>10 giờ 26 phút</strong></span></li>
                                </ul>
                                <div class="morongvathunho"><a class="btn" style="color: orangered;"
                                        id="morongtatca">Mở rộng tất cả</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 my-container3">
                <div class="col-lg-3-right d-flex flex-column align-items-center">
                    <img class="img-fluid rounded mb-4 mb-lg-0" src="<%= courses.imageCourse %>" alt=""
                        style="width: 600px; height: 300px;">
                    <h5 class="mp-h5">
                        <%= courses.costCourse %>
                    </h5>
                    <button class="dangky-btn">
                        <a href="/course-learning?id=<%= lectureList._id%>" class="dangky-btn">ĐĂNG KÝ HỌC</a>
                    </button>
                    <ul class="ul-dangky">
                        <li>
                            <span>Trình độ cơ bản</span>
                        </li>
                        <li>
                            <span>Tổng số <%= totalLectures %> bài học</span>
                        </li>
                        <li>
                            <span>Thời lượng 30 giờ 26 phút</span>
                        </li>
                        <li>
                            <span>Học mọi lúc, mọi nơi</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<script src="/js/course-detail.js"></script>