<!-- About Start -->
<div class="container-fluid py-5">
    <div class="container-1">
        <div class="row-1">
            <div class="col-7 my-container2">
                <div class="">
                    <div class="text-left mb-4">
                        <h5 style=" color: black; font-size: 30px;">
                            <%= courses.nameCourse %>
                        </h5>
                        <p>
                            <%= courses.descriptionCourse %>
                        </p>
                    </div>
                    <div class="tonghopca">
                        <div class="tong-all">
                            <% let totalChapters=0; %>
                                <% let totalLectures=0; %>
                                    <% for (let j=0; j < courseContent.length; j++) { %>
                                        <% totalChapters++; %>
                                            <div class="nav-baihoc" data-target="tonghop-baihoc-<%= j %>">
                                                <div class="baihoc<%= j + 1 %>">
                                                    <h6 class="h6-god">
                                                        <span class="icon expand-icon">+</span>
                                                        <span>
                                                            <%= j + 1 %>. <%= courseContent[j].nameCourseContent %>
                                                        </span>
                                                        <span class="span-baihoc">
                                                            <%= lectureList[j].length %> bài học
                                                        </span>
                                                    </h6>
                                                </div>
                                            </div>
                                            <% totalLectures +=lectureList[j].length; %>
                                                <div class="tonghop-baihoc" id="tonghop-baihoc-<%= j %>">
                                                    <% for (let k=0; k < lectureList[j].length; k++) { %>
                                                        <div class="noidung-baihoc">

                                                            <a href="/course-learning/<%= courses.slug %>?id=<%= lectureList[j][k]._id %>">

                                                                <div class="baihoc-div1">
                                                                    <i class="fas fa-play-circle" style="color: #f4741f;"></i>
                                                                    <span>
                                                                        <%= (totalLectures - lectureList[j].length + k +
                                                                            1) %>. <%= lectureList[j][k].nameLecture %>
                                                                    </span>
                                                                    <span class="time-baihoc">
                                                                        <%= videoDurations[totalLectures -
                                                                            lectureList[j].length + k] %>
                                                                    </span>
                                                                </div>
                                                            </a>

                                                        </div>
                                                        <% } %>
                                                </div>
                                                <% } %>
                        </div>
                        <div class="row-container">
                            <h5 style="color: black; font-size: 20px;">Nội dung khóa học</h5>
                            <div class="noidung-cl">
                                <ul>
                                    <li><strong>
                                            <%= totalChapters %>
                                        </strong> chương</li>
                                    <li><strong>
                                            <%= totalLectures %>
                                        </strong> bài học</li>
                                    <li><span>Thời lượng <strong>
                                                <%= totalDuration %>
                                            </strong></span></li>
                                </ul>
                                <div class="morongvathunho"><a class="btn" style="color: orangered;" id="morongtatca">Mở
                                        rộng tất cả</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3 my-container3">
                <div class="col-lg-3-right d-flex flex-column align-items-center">
                    <img class="img-fluid rounded mb-4 mb-lg-0" src="<%= courses.imageCourse %>" alt=""
                        style="width: 600px; height: 300px;">
                    <h5 class="mp-h5">
                        <%= courses.costCourse %>
                    </h5>
                    <button class="dangky-btn">
                        <a href="/course-learning?id=<%= lectureList._id%>" class="dangky-btn">ĐĂNG KÝ HỌC</a>
                    </button>
                    <ul class="ul-dangky">

                        <i class="fas fa-layer-group" style="margin-right: 10px;"></i><span>Trình độ cơ bản</span>
                        <br>

                        <i class="fas fa-film" style="margin-right: 10px;"></i><span>Tổng số <%= totalLectures %> bài
                                học</span>
                        <br>

                        <i class="fas fa-clock" style="margin-right: 10px;"></i><span>Thời lượng <%= totalDuration %>
                                </span>
                        <br>
                        <i class="fas fa-chalkboard" style="margin-right: 10px;"></i><span>Học mọi lúc, mọi nơi</span>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
<script src="/js/course-detail.js"></script>